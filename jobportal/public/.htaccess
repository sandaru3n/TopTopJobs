# Disable directory browsing
Options -Indexes

# ----------------------------------------------------------------------
# Rewrite engine
# ----------------------------------------------------------------------

# Turning on the rewrite engine is necessary for the following rules and features.
# FollowSymLinks must be enabled for this to work.
<IfModule mod_rewrite.c>
	Options +FollowSymlinks
	RewriteEngine On

	# If you installed CodeIgniter in a subfolder, you will need to
	# change the following line to match the subfolder you need.
	# http://httpd.apache.org/docs/current/mod/mod_rewrite.html#rewritebase
	# RewriteBase /

	# # PRIORITY 0: Force HTTPS and redirect www to non-www
	# # Step 1: Redirect www.toptopjobs.com (both HTTP and HTTPS) to https://toptopjobs.com
	# # Use explicit matching to ensure www redirects work
	# RewriteCond %{HTTP_HOST} ^www\.toptopjobs\.com$ [NC]
	# RewriteRule ^(.*)$ https://toptopjobs.com/$1 [R=301,L]
	
	# # Step 2: Redirect HTTP (non-www) to HTTPS
	# RewriteCond %{HTTPS} !=on
	# RewriteCond %{HTTP_HOST} ^toptopjobs\.com$ [NC]
	# RewriteRule ^(.*)$ https://toptopjobs.com/$1 [R=301,L]
	
	# # Step 3: Redirect any other domain (not toptopjobs.com) to https://toptopjobs.com
	# RewriteCond %{HTTP_HOST} !^toptopjobs\.com$ [NC]
	# RewriteRule ^(.*)$ https://toptopjobs.com/$1 [R=301,L]

	# Redirect Trailing Slashes...
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_URI} (.+)/$
	RewriteRule ^ %1 [L,R=301]

	# Allow both www and non-www versions (comment out redirect for local development)
	# Rewrite "www.example.com -> example.com"
	# RewriteCond %{HTTPS} !=on
	# RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
	# RewriteRule ^ http://%1%{REQUEST_URI} [R=301,L]

	# Serve uploads directory directly (BEFORE any other routing)
	# This prevents /uploads/ from being routed through CodeIgniter
	# Handle both /uploads/ and /api/uploads/ patterns
	# Serve files directly if they exist, bypass CodeIgniter completely
	RewriteCond %{REQUEST_URI} ^/(api/)?uploads/ [NC]
	RewriteCond %{REQUEST_FILENAME} -f
	RewriteRule ^ - [L]
	
	# Redirect /api/uploads/ to /uploads/ (removes api prefix) - even if file doesn't exist yet
	RewriteCond %{REQUEST_URI} ^/api/uploads/ [NC]
	RewriteRule ^api/uploads/(.*)$ uploads/$1 [R=301,L]
	
	# Serve API PHP files directly
	RewriteCond %{REQUEST_URI} ^/api/.*\.php$ [NC]
	RewriteCond %{REQUEST_FILENAME} -f
	RewriteRule ^ - [L]
	
	# Allow API files and other static files to be served directly (before CodeIgniter routing)
	# This ensures /api/jobs.php, /api/categories.php, CSS, JS, images are served directly
	RewriteCond %{REQUEST_FILENAME} -f
	RewriteRule ^ - [L]
	
	# Checks to see if the user is attempting to access a valid file,
	# such as an image or css document, if this isn't true it sends the
	# request to the front controller, index.php
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^([\s\S]*)$ index.php/$1 [L,NC,QSA]

	# Ensure Authorization header is passed along
	RewriteCond %{HTTP:Authorization} .
	RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

<IfModule !mod_rewrite.c>
	# If we don't have mod_rewrite installed, all 404's
	# can be sent to index.php, and everything works as normal.
	ErrorDocument 404 index.php
</IfModule>

# Disable server signature start
ServerSignature Off
# Disable server signature end
